topicprefix = /topic/
collectives = <%= collective %>,<%= arr = subcollectives.split(/,/); arr[ rand(arr.size) ] %>
main_collective = <%= collective %>
libdir = <%= BASEDIR %>/plugins/<%= identity %>:<%= BASEDIR %>/collective/base/plugins
logfile = <%= BASEDIR %>/logs/<%= identity %>-server.log
loglevel = debug
daemonize = 1
identity = <%= identity %>

# Plugins
securityprovider = none

connector = stomp
plugin.stomp.pool.size = 1
plugin.stomp.pool.host1 = <%= stompserver %>
plugin.stomp.pool.port1 = <%= stompport %>
plugin.stomp.pool.user1 = <%= stompuser %>
plugin.stomp.pool.password1 = <%= stomppass %>
plugin.stomp.pool.ssl1 = <%= stompssl == "y" ? "true" : "false" %>

factsource = yaml
plugin.yaml = <%= BASEDIR %>/etc/<%= identity %>/facts.yaml

classesfile = <%= BASEDIR %>/etc/<%= identity %>/classes.txt
